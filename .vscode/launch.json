    // "program": "${workspaceFolder}/server/build/index.js"    
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}\\src\\index.ts"
            ],
            "cwd": "${workspaceFolder}/src",
            "restart": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program Update",
            "runtimeExecutable": "ts-node-dev",
            "args": [
                "${workspaceFolder}\\src\\index.ts"
            ],
            "cwd": "${workspaceFolder}/src",
            "restart": true
        }
    ]
}